<script>
var elementos = document.querySelectorAll(".getDate");


// Função para formatar a data
function formatarData(data) {
    var dia = data.getDate().toString().padStart(2, '0');
    var mes = (data.getMonth() + 1).toString().padStart(2, '0'); // Note que o mês começa em 0 (janeiro) em JavaScript.
    var ano = data.getFullYear();
    var hora = data.getHours().toString().padStart(2, '0');
    var minuto = data.getMinutes().toString().padStart(2, '0');
    var segundo = data.getSeconds().toString().padStart(2, '0');
    
    var dataFormatada = `${dia}.${mes}.${ano}`;
    return dataFormatada;
}

elementos.forEach(function(elemento) {
    let elementoNovo = formatarData(new Date(elemento.textContent));
    elemento.innerText = elementoNovo;
    console.log();
});

</script> 
